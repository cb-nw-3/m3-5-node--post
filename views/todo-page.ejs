<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="./todo-list/style.css" />
  </head>
  <body>
    <div class="todo-title">
      <h1>My To Do List</h1>
    </div>
    <form class="todo-form" method="POST" action="/data">
      <label>Enter an item</label>
      <input name="item" type="text" />
      <button type="submit">Submit</button>
    </form>
    <div class="todo-ctn">
      <ul class="todo-list">
        <% items.forEach(item => { %>
        <li><%= item %></li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
